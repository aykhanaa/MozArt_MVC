@section scripts {
    <script src="~/assets/js/my-account/my-account.js"></script>
}

<script>
    $(document).ready(function () {
        $('.myaccount-tab-list a[data-bs-toggle="tab"]').on('click', function (e) {
            e.preventDefault();

            const target = $(this).attr('href');

            // Bütün tab-ları gizlət və hədəfi göstər
            $('.tab-pane').removeClass('active show');
            $(target).addClass('active show');

            // Tab menyusunda aktiv sinfi yenilə
            $('.myaccount-tab-list a').removeClass('active');
            $(this).addClass('active');

            // Tab content hissəsini səhifənin ortasına gətir
            const targetOffset = $(target).offset().top;
            const windowHeight = $(window).height();
            const scrollPosition = targetOffset - (windowHeight / 2) + ($(target).outerHeight() / 2);

            $('html, body').animate({
                scrollTop: scrollPosition
            }, 400);
        });
    });
</script>
@model List<VideoVM>


<div class="container my-5" style="margin-left: 22pc !important; width: 68pc !important; margin-top: 120px !important;">
    <h1 class="text-center mt-3 mb-3" style="margin-left:200px; margin-top:150px;">Video</h1>
    @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
    {
        @if (Model.Count < 1)
        {
            <a class="btn btn-success text-white" asp-action="Create">Create</a>
        }

    }
   
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        VideoURL
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        <td class="py-1">
                            <img src="~/assets/img/about/@item.Image" style="width:80px;height:80px;border-radius:0" alt="image" />
                        </td>
                        <td>
                            @item.VideoURL
                        </td>
                        <td>
                            @item.CreateDate.ToString("dd/MM/yyyy")
                        </td>

                        <td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                            {
                                <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                            }
                            @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            }

                            @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
                            {
                                <button type="button" class="btn btn-danger delete-btn" data-id="@item.Id">Delete</button>

                            }
                          
                           
                          


                        </td>

                    </tr>
                }
            </tbody>
        </table>
        @Html.AntiForgeryToken()

    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButtons = document.querySelectorAll('.delete-btn');
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            deleteButtons.forEach(button => {
                button.addEventListener('click', async function () {
                    const id = this.getAttribute('data-id');
                    const row = this.closest('tr');

                    const formData = new FormData();
                    formData.append('__RequestVerificationToken', token);

                    const response = await fetch(`/Admin/Video/Delete/${id}`, {
                        method: 'POST',
                        body: formData
                    });

                    if (response.ok) {
                        row.remove();

                        const remainingRows = document.querySelectorAll('tbody tr').length;

                        // YENİ: Create düyməsini hər klikdə dinamik yoxla
                        let createBtn = document.querySelector('.btn-success[href="/Admin/Video/Create"]');

                        if (remainingRows < 2 && !createBtn) {
                            const container = document.querySelector('.container');
                            const newCreate = document.createElement('a');
                            newCreate.className = 'btn btn-success text-white';
                            newCreate.href = '/Admin/Video/Create';
                            newCreate.textContent = 'Create';
                            container.insertBefore(newCreate, container.querySelector('.table-responsive'));
                        }
                    } else {
                        alert("Silinmə zamanı xəta baş verdi.");
                    }
                });
            });
        });
    </script>
}

@model InstagramCreateVM


<div class="container mt-5">
    <h1 class="text-center mt-3 mb-3" style="margin-top: 4pc !important;">Create</h1>
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data" style="margin-left: 14pc;">

        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control" accept="image/*">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3 mr-2">Submit</button>
        <a class="btn btn-light mt-3" asp-action="Index">Back</a>
    </form>
</div>



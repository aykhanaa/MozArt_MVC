@model BlogVM

<div class="container" style="max-width: 600px; margin-top: 4rem;">
    <h2 class="text-center mb-4">Blog Detail</h2>

    <div class="form-group mb-4">
        <label class="form-label fw-semibold text-muted">Image</label><br />
        <img src="~/assets/img/blog/@Model.Image" class="img-thumbnail mt-2" style="max-width: 100%; height: auto; max-height: 300px;" alt="Blog Image" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-semibold text-muted">Title</label>
        <div class="form-control-plaintext">@Model.Title</div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-semibold text-muted">Description</label>
        <div class="form-control-plaintext">@Model.Description</div>
    </div>

    <div class="form-group mb-3">
        <label class="form-label fw-semibold text-muted">Category</label>
        <div class="form-control-plaintext">@Model.BlogCategoryName</div>
    </div>




    <div class="form-group text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>

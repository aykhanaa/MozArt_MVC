@model BlogCreateVM

<div class="container mt-5">
    <h1 class="text-center mt-3 mb-3">Create Blog</h1>
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data" style="margin-left: 14pc;">

        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-group">
            <label asp-for="BlogCategoryId">Category</label>
            <select asp-for="BlogCategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
            <span class="text-danger" asp-validation-for="BlogCategoryId"></span>
        </div>

        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3 mr-2">Submit</button>
        <a class="btn btn-light mt-3" asp-action="Index">Back</a>
    </form>
</div>

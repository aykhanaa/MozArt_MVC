@model BlogEditVM

<h2>Edit Blog</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" style="margin-left: 20pc; margin-top: 3pc;">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BlogCategoryId" class="control-label">Category</label>
        <select asp-for="BlogCategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Current Image</label><br />
        <img src="~/assets/img/blog/@Model.Image" width="200" />
        <input type="hidden" asp-for="Image" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="Photo" class="control-label">New Photo (optional)</label>
        <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
